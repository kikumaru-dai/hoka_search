<!--画面タイトル-->
<%= render partial: 'layouts/pagetitle', locals: { title: '無料会員登録' } %>
<!--画面タイトルここまで-->

<div class="row d-flex justify-content-center">
  <div class="col-10 col-md-6">
    <%= form_with model: @user, url: user_registration_path, class: 'text-center mb-4', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="div-title mb-4">
        <%= f.label :email, "メールアドレス",class: 'title-p fw-bold text-main' %>
        <%= f.email_field :email, autocomplete: "email",class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
      </div>
    
      <div class="div-title mb-4">
        <%= f.label :password, "パスワード",class: 'title-p fw-bold text-main' %>
        <%= f.password_field :password, autocomplete: "new-password",class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
      </div>
    
      <div class="div-title mb-4">
        <%= f.label :password_confirmation, "パスワード確認",class: 'title-p fw-bold text-main' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
      </div>
      
      <div class="div-title mb-4">
        <%= f.label :user_name, "ユーザーネーム",class: 'title-p fw-bold text-main' %>
        <%= f.text_field :user_name, autofocus: true, autocomplete: "name",class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
      </div>
      
      <div class="d-flex img-select">
        <div>
          <%= f.label :avatar, "ユーザー画像登録",class: 'fw-bold mb-4 text-main' %>
          <%= f.file_field :avatar, style: 'display: block;' %>
        </div>
      </div>
    
      <div class="col-12 d-flex justify-content-center">
        <%= f.submit "会員登録", class: "btn d-block rounded fw-bold box-shadow text-white mt-4 px-5 py-3 fs-6", style: "background-color:#2146C7;" %>
      </div>
    <% end %>
  </div>
</div>
