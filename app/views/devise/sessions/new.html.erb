<!--画面タイトル-->
<%= render partial: 'layouts/pagetitle', locals: { title: 'ログイン' } %>
<!--画面タイトルここまで-->

<div class="row d-flex justify-content-center">
  <div class="col-10 col-md-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="div-title mb-4">
            <%= f.label :email, "メールアドレス",class: 'title-p fw-bold text-main' %><span class="p_required">必須</span></p>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
          </div>
    
          <div class="div-title mb-4">
            <%= f.label :password, "パスワード",class: 'title-p fw-bold text-main' %><span class="p_required">必須</span>
            <%= f.password_field :password, autocomplete: "new-password",class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
          </div>
    
          <div class="col-12 d-flex justify-content-center">
            <%= f.submit "ログイン", class: "btn d-block rounded fw-bold box-shadow text-white mt-4 px-5 py-3 fs-6", style: "background-color:#2146C7;" %>
          </div>
    <% end %>
  </div>
</div>
